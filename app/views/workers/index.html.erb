<%= periodically_call_remote( 
            :update => 'workers',
            :frequency => 3, 
            :url => workers_path,
            :method => :get,
            :before => %(Element.show('spinner')),
            :success => %(Element.hide('spinner') ) )
       %>

<table id="worker_table" cellspacing="8">
 <tr><th>Worker</th><th>Last run</th><th>Action</th><th><%= image_tag 'spinner.gif', :id => 'spinner', :style => 'display:none' %></th></tr>
 <tbody id="workers">
   <%= render( :partial => "worker", :collection => @workers ) %>
    <% if @workers.empty? %>
     <tr><th align="center" colspan="5">No workers running</th></tr>
    <% end %> 
 </tbody>  
</table>
<br><br>

