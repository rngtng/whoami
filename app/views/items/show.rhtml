  <div class="item" style="width:90%; border: 0px solid #333333; margin: 0px auto">
   <table width="100%">
    <tr>
     <td width="200" valign="top">
       <%= @item.html if @item.html %>
       <%= link_to( image_tag( @item.thumbnail, :size => "200x200", :style => "border: 1px solid #{@item.color};" ), @item.url ) unless @item.html %>
       <% if @map %>
        <div id="map_div">
          <b>map</b>
          <%= @map.to_html %>  
          <%= @map.div(:width => 300, :height => 200) %>
	</div>
       <% end %>
     </td>
     <td valign="top">
      <h3><%= @item.title %> - <%= @item.time.strftime("%H:%M %d.%m.%Y") %></h3>
      <br clear="all">
      <%= @item.text.gsub!(/\n/, '<br/>') if @item.text %>
      
      <div id="tags">
        <%= render :partial => "partials/tag_group", :collection => Item.tag_types, :locals => { :from => @item } %>
      </div>
     </td>
     <td valign="top" width="200">
       <div id="relations">
        <b>related items</b>
	<ul id="items">
	  <%= render :partial => "relation_group", :collection => Item.tag_types %>
	  <li>via Items after:
            <ul>
             <%= render :partial => "relation", :collection => @item.related_items( :period => 2.days ) %>
            </ul>
	   <br clear="all">
	  </li>
	  <li>via Items before:
            <ul>
             <%= render :partial => "relation", :collection => @item.related_items( :period => -2.days ) %>
            </ul>
	   <br clear="all">
	  </li> 
	</ul> 
       </div>
     </td>
    </tr>
   </table>
  </div>
